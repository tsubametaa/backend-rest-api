---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import { User, BookOpen, Plus, ArrowRight } from '@lucide/astro';
---

<Layout title="Dashboard - Perpustakaan">
  <div class="fixed inset-0 bg-[url('/grid-pattern.svg')] bg-center [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))]"></div>
  <div class="fixed inset-0 bg-gradient-to-tr from-primary-500/10 via-transparent to-purple-500/10 blur-3xl pointer-events-none"></div>
  
  <div class="relative z-10">
    <Navbar />
    
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="flex items-center justify-between mb-8">
        <div>
          <h1 class="text-3xl font-bold text-white mb-2">Overview</h1>
          <p class="text-gray-400">Selamat datang kembali di panel admin.</p>
        </div>
        <div class="flex gap-3">
             <div class="h-10 w-10 rounded-full bg-gradient-to-r from-primary-600 to-indigo-600 p-[1px]">
                <div class="h-full w-full rounded-full bg-gray-900 flex items-center justify-center text-xs font-bold text-white">
                  AD
                </div>
             </div>
        </div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8 mt-12">
        <div class="group relative bg-gray-900/40 backdrop-blur-xl rounded-2xl p-6 border border-white/10 hover:border-primary-500/50 transition-all duration-300">
          <div class="absolute inset-0 bg-gradient-to-br from-primary-600/5 to-indigo-600/5 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity"></div>
          <div class="relative flex items-center justify-between mb-4">
            <div class="p-3 bg-blue-500/10 rounded-xl text-blue-400 group-hover:scale-110 transition-transform duration-300">
              <User class="w-6 h-6" />
            </div>
            <span class="flex items-center text-xs font-medium text-green-400 bg-green-400/10 px-2 py-1 rounded-lg">
              Active
            </span>
          </div>
          <div>
            <p class="text-sm font-medium text-gray-400 mb-1">Total Penulis</p>
            <p id="penulisCount" class="text-3xl font-bold text-white tracking-tight">-</p>
          </div>
          <a href="/penulis" class="absolute bottom-6 right-6 p-2 rounded-lg hover:bg-white/5 text-gray-400 hover:text-white transition-colors">
            <ArrowRight class="w-5 h-5" />
          </a>
        </div>
        
        <div class="group relative bg-gray-900/40 backdrop-blur-xl rounded-2xl p-6 border border-white/10 hover:border-green-500/50 transition-all duration-300">
           <div class="absolute inset-0 bg-gradient-to-br from-green-600/5 to-emerald-600/5 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity"></div>
          <div class="relative flex items-center justify-between mb-4">
            <div class="p-3 bg-green-500/10 rounded-xl text-green-400 group-hover:scale-110 transition-transform duration-300">
              <BookOpen class="w-6 h-6" />
            </div>
            <span class="flex items-center text-xs font-medium text-green-400 bg-green-400/10 px-2 py-1 rounded-lg">
              Verified
            </span>
          </div>
           <div>
            <p class="text-sm font-medium text-gray-400 mb-1">Total Buku</p>
            <p id="bukuCount" class="text-3xl font-bold text-white tracking-tight">-</p>
          </div>
           <a href="/buku" class="absolute bottom-6 right-6 p-2 rounded-lg hover:bg-white/5 text-gray-400 hover:text-white transition-colors">
            <ArrowRight class="w-5 h-5" />
          </a>
        </div>
        
        <div class="group relative bg-gradient-to-br from-gray-900/40 to-gray-800/40 backdrop-blur-xl rounded-2xl p-6 border border-white/10">
          <h3 class="font-semibold text-white mb-6 flex items-center gap-2">
            <span class="w-1 h-6 bg-primary-500 rounded-full"></span>
            Aksi Cepat
          </h3>
          <div class="space-y-3">
            <a href="/penulis" class="group/btn flex items-center justify-between w-full bg-white/5 hover:bg-primary-600 text-gray-300 hover:text-white py-3 px-4 rounded-xl transition-all duration-300 border border-white/5 hover:border-primary-500">
              <span class="font-medium">Tambah Penulis</span>
              <Plus class="w-4 h-4 transform group-hover/btn:rotate-90 transition-transform" />
            </a>
            <a href="/buku" class="group/btn flex items-center justify-between w-full bg-white/5 hover:bg-green-600 text-gray-300 hover:text-white py-3 px-4 rounded-xl transition-all duration-300 border border-white/5 hover:border-green-500">
              <span class="font-medium">Tambah Buku</span>
              <Plus class="w-4 h-4 transform group-hover/btn:rotate-90 transition-transform" />
            </a>
          </div>
        </div>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="bg-gray-900/40 backdrop-blur-xl rounded-2xl p-6 border border-white/10">
          <div class="flex items-center justify-between mb-6">
             <h3 class="font-semibold text-white">Penulis Terbaru</h3>
             <button class="text-xs text-primary-400 hover:text-primary-300 transition-colors">View All</button>
          </div>
          <div id="recentPenulis" class="space-y-3">
            <div class="animate-pulse space-y-3">
                <div class="h-16 bg-white/5 rounded-xl"></div>
                <div class="h-16 bg-white/5 rounded-xl"></div>
            </div>
          </div>
        </div>
        
        <div class="bg-gray-900/40 backdrop-blur-xl rounded-2xl p-6 border border-white/10">
           <div class="flex items-center justify-between mb-6">
             <h3 class="font-semibold text-white">Buku Terbaru</h3>
             <button class="text-xs text-primary-400 hover:text-primary-300 transition-colors">View All</button>
          </div>
          <div id="recentBuku" class="space-y-3">
            <div class="animate-pulse space-y-3">
                <div class="h-16 bg-white/5 rounded-xl"></div>
                <div class="h-16 bg-white/5 rounded-xl"></div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</Layout>

<script>
  const API_URL = import.meta.env.PUBLIC_API_URL || 'http://localhost:3001/api';
  const token = localStorage.getItem('token');
  
  if (!token) {
    window.location.href = '/';
  }
  
  const headers = {
    'Authorization': `Bearer ${token}`,
    'Content-Type': 'application/json',
  };
  
  async function loadDashboard() {
    try {
      const [penulisRes, bukuRes] = await Promise.all([
        fetch(`${API_URL}/penulis`, { headers }),
        fetch(`${API_URL}/buku`, { headers }),
      ]);
      
      if (penulisRes.status === 401 || bukuRes.status === 401) {
        localStorage.removeItem('token');
        window.location.href = '/';
        return;
      }
      
      const penulisList = await penulisRes.json();
      const bukuList = await bukuRes.json();
      
      document.getElementById('penulisCount')!.textContent = penulisList.length.toString();
      document.getElementById('bukuCount')!.textContent = bukuList.length.toString();
      
      const recentPenulisDiv = document.getElementById('recentPenulis')!;
      if (penulisList.length === 0) {
        recentPenulisDiv.innerHTML = '<div class="text-center py-8 text-gray-500 text-sm bg-white/5 rounded-xl border border-dashed border-white/10">Belum ada penulis</div>';
      } else {
        recentPenulisDiv.innerHTML = penulisList.slice(0, 3).map((p: any) => `
          <div class="flex items-center justify-between p-4 bg-white/5 border border-white/5 rounded-xl hover:bg-white/10 transition-colors group">
            <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center text-white font-bold text-sm">
                    ${p.nama.charAt(0)}
                </div>
                <div>
                    <span class="block font-medium text-gray-200 group-hover:text-white transition-colors custom-font">${p.nama}</span>
                    <span class="text-xs text-gray-500">ID: #${Math.floor(Math.random() * 1000)}</span>
                </div>
            </div>
            <span class="px-3 py-1 text-xs rounded-full bg-primary-500/20 text-primary-300 border border-primary-500/20">
                ${p.bukuList?.length || 0} buku
            </span>
          </div>
        `).join('');
      }
      
      const recentBukuDiv = document.getElementById('recentBuku')!;
      if (bukuList.length === 0) {
        recentBukuDiv.innerHTML = '<div class="text-center py-8 text-gray-500 text-sm bg-white/5 rounded-xl border border-dashed border-white/10">Belum ada buku</div>';
      } else {
        recentBukuDiv.innerHTML = bukuList.slice(0, 3).map((b: any) => `
          <div class="flex items-center justify-between p-4 bg-white/5 border border-white/5 rounded-xl hover:bg-white/10 transition-colors group">
            <div class="flex items-center gap-3">
                 <div class="w-10 h-10 rounded-lg bg-gray-800 flex items-center justify-center text-gray-400 group-hover:text-white transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-book"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"/></svg>
                </div>
                <div>
                     <span class="block font-medium text-gray-200 group-hover:text-white transition-colors line-clamp-1">${b.judul}</span>
                     <span class="text-xs text-gray-500">${b.tahunTerbit || 'Unknown Year'}</span>
                </div>
            </div>
             <span class="text-gray-400">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-chevron-right"><path d="m9 18 6-6-6-6"/></svg>
             </span>
          </div>
        `).join('');
      }
    } catch (error) {
      console.error('Error loading dashboard:', error);
    }
  }
  
  loadDashboard();
</script>
