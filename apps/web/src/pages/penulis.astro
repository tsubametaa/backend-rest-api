---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import { Plus, Edit2, Trash2, User, Book } from '@lucide/astro';
---

<Layout title="Penulis - Perpustakaan">
  <div class="fixed inset-0 bg-[url('/grid-pattern.svg')] bg-center [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))]"></div>
  <div class="fixed inset-0 bg-gradient-to-tr from-primary-500/10 via-transparent to-purple-500/10 blur-3xl pointer-events-none"></div>

  <div class="relative z-10 w-full min-h-screen">
    <Navbar />
    
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="flex flex-col sm:flex-row justify-between items-center mb-8 gap-4">
        <div>
           <h1 class="text-3xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-white to-gray-400">Daftar Penulis</h1>
           <p class="text-gray-400 text-sm mt-1">Manage all authors in one place</p>
        </div>
        
        <button 
          id="addPenulisBtn"
          class="flex items-center gap-2 bg-gradient-to-r from-primary-600 to-indigo-600 hover:from-primary-500 hover:to-indigo-500 text-white px-5 py-2.5 rounded-xl shadow-lg shadow-primary-500/20 transition-all hover:scale-[1.02] active:scale-[0.98]"
        >
          <Plus class="w-5 h-5" />
          <span>Tambah Penulis</span>
        </button>
      </div>
      
      <div id="penulisModal" class="hidden fixed inset-0 bg-black/80 backdrop-blur-sm items-center justify-center z-[100] p-4">
        <div class="bg-gray-900 border border-white/10 rounded-2xl p-6 w-full max-w-md shadow-2xl relative overflow-hidden">
           <div class="absolute inset-0 bg-gradient-to-br from-primary-600/10 to-transparent pointer-events-none"></div>
           
          <h2 id="modalTitle" class="text-xl font-bold text-white mb-6 relative z-10">Tambah Penulis</h2>
          
          <form id="penulisForm" class="space-y-4 relative z-10">
            <input type="hidden" id="penulisId" />
            <div>
              <label class="block text-xs font-medium text-gray-400 uppercase tracking-wider mb-2">Nama</label>
              <input 
                type="text" 
                id="penulisNama"
                required
                class="w-full px-4 py-3 bg-black/30 border border-white/10 rounded-xl text-white focus:ring-2 focus:ring-primary-500/50 focus:border-primary-500 focus:outline-none transition-all"
                placeholder="Nama Lengkap"
              />
            </div>
            <div>
              <label class="block text-xs font-medium text-gray-400 uppercase tracking-wider mb-2">Bio</label>
              <textarea 
                id="penulisBio"
                rows="3"
                class="w-full px-4 py-3 bg-black/30 border border-white/10 rounded-xl text-white focus:ring-2 focus:ring-primary-500/50 focus:border-primary-500 focus:outline-none transition-all resize-none"
                placeholder="Deskripsi singkat..."
              ></textarea>
            </div>
            <div class="flex justify-end space-x-3 mt-6">
              <button 
                type="button" 
                id="cancelBtn"
                class="px-4 py-2 text-gray-400 hover:text-white transition-colors"
              >
                Batal
              </button>
              <button 
                type="submit"
                class="bg-gradient-to-r from-primary-600 to-indigo-600 text-white px-6 py-2 rounded-xl hover:shadow-lg hover:shadow-primary-500/20 transition-all font-medium"
              >
                Simpan
              </button>
            </div>
          </form>
        </div>
      </div>
      
      <div id="penulisList" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="animate-pulse bg-gray-900/40 rounded-2xl p-6 border border-white/5 h-[160px]"></div>
        <div class="animate-pulse bg-gray-900/40 rounded-2xl p-6 border border-white/5 h-[160px]"></div>
        <div class="animate-pulse bg-gray-900/40 rounded-2xl p-6 border border-white/5 h-[160px]"></div>
      </div>
    </main>
  </div>
</Layout>

<script>
  const API_URL = import.meta.env.PUBLIC_API_URL || 'http://localhost:3001/api';
  const token = localStorage.getItem('token');
  
  if (!token) {
    window.location.href = '/';
  }
  
  const headers = {
    'Authorization': `Bearer ${token}`,
    'Content-Type': 'application/json',
  };
  
  const modal = document.getElementById('penulisModal')!;
  const form = document.getElementById('penulisForm')!;
  const modalTitle = document.getElementById('modalTitle')!;
  
  document.getElementById('addPenulisBtn')?.addEventListener('click', () => {
    modalTitle.textContent = 'Tambah Penulis';
    (document.getElementById('penulisId') as HTMLInputElement).value = '';
    (document.getElementById('penulisNama') as HTMLInputElement).value = '';
    (document.getElementById('penulisBio') as HTMLTextAreaElement).value = '';
    modal.classList.remove('hidden');
  });
  
  document.getElementById('cancelBtn')?.addEventListener('click', () => {
    modal.classList.add('hidden');
  });
  
  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    const id = (document.getElementById('penulisId') as HTMLInputElement).value;
    const nama = (document.getElementById('penulisNama') as HTMLInputElement).value;
    const bio = (document.getElementById('penulisBio') as HTMLTextAreaElement).value;
    
    try {
      const url = id ? `${API_URL}/penulis/${id}` : `${API_URL}/penulis`;
      const method = id ? 'PUT' : 'POST';
      
      await fetch(url, {
        method,
        headers,
        body: JSON.stringify({ nama, bio }),
      });
      
      modal.classList.add('hidden');
      loadPenulis();
    } catch (error) {
      console.error('Error menyimpan penulis:', error);
    }
  });
  
  function editPenulis(penulis: any) {
    modalTitle.textContent = 'Edit Penulis';
    (document.getElementById('penulisId') as HTMLInputElement).value = penulis.id;
    (document.getElementById('penulisNama') as HTMLInputElement).value = penulis.nama;
    (document.getElementById('penulisBio') as HTMLTextAreaElement).value = penulis.bio || '';
    modal.classList.remove('hidden');
  }
  
  async function deletePenulis(id: string) {
    if (!confirm('Yakin ingin menghapus penulis ini?')) return;
    
    try {
      await fetch(`${API_URL}/penulis/${id}`, { method: 'DELETE', headers });
      loadPenulis();
    } catch (error) {
      console.error('Error menghapus penulis:', error);
    }
  }
  
  async function loadPenulis() {
    try {
      const response = await fetch(`${API_URL}/penulis`, { headers });
      
      if (response.status === 401) {
        localStorage.removeItem('token');
        window.location.href = '/';
        return;
      }
      
      const penulisList = await response.json();
      const list = document.getElementById('penulisList')!;
      
      if (penulisList.length === 0) {
        list.innerHTML = `
          <div class="col-span-full flex flex-col items-center justify-center py-20 bg-gray-900/40 border border-white/5 border-dashed rounded-3xl">
             <div class="w-16 h-16 bg-white/5 rounded-full flex items-center justify-center mb-4 text-gray-500">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
             </div>
             <p class="text-gray-400 font-medium">Belum ada penulis</p>
             <p class="text-gray-600 text-sm mt-1">Tambahkan penulis baru untuk memulai</p>
          </div>
        `;
        return;
      }
      
      list.innerHTML = penulisList.map((penulis: any) => `
        <div class="group bg-gray-900/60 backdrop-blur-md rounded-2xl p-6 border border-white/10 hover:border-primary-500/50 transition-all duration-300 hover:-translate-y-1 hover:shadow-xl hover:shadow-primary-500/10">
          <div class="flex justify-between items-start">
            <div class="w-full">
              <div class="flex items-center gap-3 mb-3">
                 <div class="w-10 h-10 rounded-full bg-gradient-to-br from-primary-500 to-indigo-600 flex items-center justify-center text-white font-bold text-sm shadow-lg shadow-indigo-500/20">
                    ${penulis.nama.substring(0, 1)}
                 </div>
                 <h3 class="font-bold text-lg text-white group-hover:text-primary-400 transition-colors">${penulis.nama}</h3>
              </div>
              <p class="text-gray-400 text-sm mt-1 line-clamp-2 leading-relaxed h-10">${penulis.bio || 'Tidak ada bio'}</p>
              
              <div class="mt-6 flex items-center justify-between pt-4 border-t border-white/5">
                <div class="text-primary-400 text-xs font-medium flex items-center gap-2 bg-primary-500/10 px-3 py-1.5 rounded-lg border border-primary-500/20">
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"/></svg>
                  <span>${penulis.bukuList?.length || 0} buku</span>
                </div>
                
                <div class="flex space-x-1 opacity-0 group-hover:opacity-100 transition-opacity translate-x-4 group-hover:translate-x-0 duration-300">
                  <button 
                    onclick="editPenulis(${JSON.stringify(penulis).replace(/"/g, '&quot;')})"
                    class="p-2 text-gray-400 hover:text-white hover:bg-white/10 rounded-lg transition-colors"
                    title="Edit"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 20h9"/><path d="M16.5 3.5a2.12 2.12 0 0 1 3 3L7 19l-4 1 1-4Z"/></svg>
                  </button>
                  <button 
                    onclick="deletePenulis('${penulis.id}')"
                    class="p-2 text-gray-400 hover:text-red-400 hover:bg-red-500/10 rounded-lg transition-colors"
                    title="Hapus"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 6h18"/><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/><line x1="10" y1="11" x2="10" y2="17"/><line x1="14" y1="11" x2="14" y2="17"/></svg>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      `).join('');
    } catch (error) {
      console.error('Error memuat penulis:', error);
    }
  }
  
  (window as any).editPenulis = editPenulis;
  (window as any).deletePenulis = deletePenulis;
  
  loadPenulis();
</script>
